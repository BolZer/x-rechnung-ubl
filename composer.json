{
    "name": "bolzer/x-rechnung-ubl",
    "description": "A package to read and create XRechnung in the UBL syntax",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "XRechnung", "UBL", "PEPPOL"
    ],
    "autoload": {
        "psr-4": {
            "Bolzer\\XRechnungUbl\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bolzer\\XRechnungUblTests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jan NÃ¶hles",
            "email": "jan.noehles@easybill.de"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "ext-dom": "*",
        "jms/serializer": "^3.30"
    },
    "require-dev": {
        "pestphp/pest": "^2.34",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.51",
        "guzzlehttp/guzzle": "^7.8"
    },
    "config": {
        "platform-check": false,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
